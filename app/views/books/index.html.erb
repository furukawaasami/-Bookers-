<h1>Books</h1>
<p>Title</p>
<p>Body</p>
<% @books.each do |book| %>
<span><%= link_to book.title,book_path(book.id) %></span>
<span><%= link_to book.body,book_path(book.id) %></span>

<span>
  <%= link_to "Show", book_path(book.id) %>
</span>
<span>
　<%= link_to "Edit", edit_book_path(book.id) %>
</span>

<%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %>



<% end %>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%=message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book,url:'/books',method: :post, local:true do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>


 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>


<% end %>
